<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MusicStoryTwo">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:paddingTop="@dimen/paddingTop_dp"
        android:paddingBottom="@dimen/paddingBottom_dp"
        android:text="@string/textTitleOne"
        android:textColor="@android:color/black"
        android:textSize="@dimen/textTitle" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_bright"
        android:gravity="center"
        android:paddingTop="@dimen/paddingTop_dp"
        android:paddingBottom="@dimen/paddingBottom_dp"
        android:text="@string/aboutOne"
        android:textColor="@android:color/black"
        android:textSize="@dimen/about" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_light"
        android:paddingLeft="@dimen/paddingLeftRight_dp"
        android:paddingTop="@dimen/paddingTop_dp"
        android:paddingRight="@dimen/paddingLeftRight_dp"
        android:paddingBottom="@dimen/paddingBottom_dp"
        android:text="@string/paraTwo"
        android:textColor="@android:color/black"
        android:textSize="@dimen/para" />
</LinearLayout>